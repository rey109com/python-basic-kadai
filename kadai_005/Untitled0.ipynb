      "source": [
        "# 上辺、下辺、高さを変数に代入する\n",
        "top = 10       # 上辺（cm）\n",
        "bottom = 20    # 下辺（cm）\n",
        "height = 5     # 高さ（cm）\n",
        "\n",
        "# 台形の面積を計算する公式\n",
        "area = (top + bottom) * height / 2\n",
        "\n",
        "# 結果を出力する（単位つきで）\n",
        "print(str(area) + \"cm²\")"
      ]
